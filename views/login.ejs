<%- include ('./header') %>
    <div class="container">
        <form action="/api/v1/login" method="post">
            <h2>Login Account</h2>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="yourmail@email.com">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" class="form-control" name="password" aria-describedby="passwordHelpBlock">
                <div id="passwordHelpBlock" class="form-text">
                Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                </div>
            </div>
            <div class="col-auto">
                <button type="submit" id="submitLogin" class="btn btn-primary mb-3" style="width: 100%;">Login</button>
            </div>
            <div class="col-auto">
                <button type="button" class="btn btn-outline-dark" style="width: 100%;"><a href="http://localhost:3000/login/auth/google" style="text-decoration: none;">Login with google</a></button>
            </div>
        </form>
        
    </div>
<%- include ('./footer') %>